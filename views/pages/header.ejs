<body>
    <nav class="navbar navbar-inverse navbar-fixed-top site-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" class="navbar-toggle collapsed"><span class="sr-only">Toggle navigation</span>                  
                      <span class="icon-bar"></span>                    
                      <span class="icon-bar"></span>                    
                      <span class="icon-bar"></span></button>
                <a href="/" class="navbar-brand">fzRoom</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="fzRoom"><a href="/wenRoom">文阁</a></li>
                    <!-- <li><a href="/article">文章</a></li> -->
                    <li class="fzRoom"><a href="/wuRoom">武阁</a></li>
                    <li class="fzRoom"><a href="/talkRoom">议阁</a></li>
                    <!-- <li><a href="/pvp">切磋</a></li> -->
                    <!-- <li><a href="/money">打榜</a></li> -->
                    <!-- <li><a href="/pve">副本</a></li> -->
                    <li class="fzRoom"><a href="/searchRoom">索阁</a></li>
                    <li class="fzRoom"><a href="/knowRoom">知阁</a></li>

                    <li class="fzRoom" id="login">
                        <% if(!user){ %>
                            <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            请登录 <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#" data-toggle="modal" data-target="#signinModal">登录</a></li>
                                <li><a href="/users/signup">注册</a></li>
                                <li><a href="/wenRoom">闲逛</a></li>
                            </ul>
                            <% }else{ %>
                                <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span><img src="/uploads/<%= user.userAvatar %>"  class="img-responsive img-circle" alt="Responsive image"></span> 
                                    <%= user.userNick %> <span class="caret"></span></a>
                                <ul class="dropdown-menu">

                                    <li><a href="/users/toSelect/<%= user.userId %>">个人中心</a></li>
                                    <li><a href="/articles/create">发表文章</a></li>
                                    <li><a href="/talkRoom/create">发表帖子</a></li>
                                    <li><a href="/users/logout">登出</a></li>
                                    <li>
                                        <!-- <a href="/home"></a> -->
                                    </li>
                                </ul>
                                <% } %>
                    </li>
                </ul>
            </div>
            <!-- /.nav-collapse-->
        </div>
    </nav>
    <div id="signinModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="/users/signin">
                    <div class="modal-header">登录</div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="signinName">用户名</label>
                            <input id="signinName" name="username" type="text" placeholder="请输入6~12位用户名" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="signinPassword">密码</label>
                            <input id="signinPassword" name="password" type="password" placeholder="请输入6~12位密码" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-default">关闭</button>
                        <button type="submit" class="btn btn-success">提交</button>
                    </div>
                </form>
                <script type="text/javascript">
                    var s = $(window).width();
                    if ((s < 760 && s > 320) || s > 960) {
                        $(".navbar-brand").html("fzRoom<small class='title'>一方一丈，亦可作春秋</small>");
                    }

                    function getRegist() {
                        location.href = "/users/signup";
                    }
                </script>
            </div>
        </div>
    </div>