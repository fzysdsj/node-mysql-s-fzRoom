    <link rel="stylesheet" href="/css/article.css" />
    <link rel="stylesheet" href="/css/articleA.css" />
    <link rel="stylesheet" href="/css/profile.css" />
    <div class="message-container">
    </div>
    <div class="mm-wrapper" id="mm-wrapper">
        <div class="body">
            <section class="home-header-section ui tint blur" data-image="https://static.ruogoo.cn/image/theme/008.jpg" style="position: relative; z-index: 1;">
                <div class="tint-overlay" style="position: absolute; width: 100%; height: 100%; overflow: hidden; z-index: -1; background: rgba(60, 30, 50, 0.6);">
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="412" height="320" id="blurred_i32nc1ooy" class="tint-bg-blur" viewBox="0 0 412 320" preserveAspectRatio="none" style="opacity: 1;"><filter id="blur_i32nc1ooy"><feGaussianBlur in="SourceGraphic" stdDeviation="20"></feGaussianBlur></filter><image x="0" y="0" width="412" height="320" externalResourcesRequired="true" xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="https://static.ruogoo.cn/image/theme/008.jpg" style="filter:url(#blur_i32nc1ooy)" preserveAspectRatio="none"></image></svg>
                </div>
                <div class="user-detail container">
                    <div class="avatar-block editable">
                        <a href="/users/toSelect/<%= datas[0].userId %>/set/avatar" class="change-head">
                            <img class="avatar-big" src="/uploads/<%= datas[0].userAvatar %>" data-original="/uploads/<%= datas[0].userAvatar %>" width="160" height="160" alt="<%= datas[0].userNick %>">
                            <div class="change-head-tip">修改头像</div>
                        </a>
                    </div>

                    <div class="info-block">
                        <div class="info">
                            <span class="name title white extra"><%= datas[0].userNick %></span>
                            <a href="/wenRoom/know" class="rg-label small level" id="level<%= datas[0].userClass %>">
                                <%= datas[0].userClass %>
                            </a>
                            <span class="span-item gender white text">
                                <% if(datas[0].userSex = '男'){ %>
                            <i class="ri ri-mars"></i>
                            <% }else{ %>
                            <i class="ri ri-venus"></i>
                            <% } %>
                            (距下次升级所需经验 ：<span id="levelValue"></span>)
                            </span>
                        </div>
                        <div class="count">
                            <span class="span-item text white attention">
			关注：<a href="/users/toSelect/<%= datas[0].userId %>/attentions" class="gray"><%= fansNumber.length %></a>
		</span>
                            <span class="span-item text white fan">
			· 粉丝：<a href="/users/toSelect/<%= datas[0].userId %>/fans" class="gray"><%= followNumber.length %></a>
		</span>
                        </div>
                        <p class="signature text white">
                        </p>
                        <% if(datas[0].userId ==user.userId){}else{ %>
                            <div class="action-block">
                                <% if(fans.length ==0){ %>
                                    <form action="/follow/fans" method="POST">
                                        <label for="followeduserid"></label>
                                        <input type="text" name="followeduserid" value="<%=datas[0].userId %>" class="hidden">
                                        <label for="fanuserid"></label>
                                        <input type="text" name="fanuserid" value="<%=user.userId %>" class="hidden">
                                        <input type="submit" class="rg-button followed" value="已关注" style="display: none;">
                                        <input type="submit" class="rg-button unfollowed" style="" value="关注">
                                        <!--  -->
                                    </form>
                                    <% }else{ %>

                                        <a href="/follow/del/<%= fans[0].ffId %>" class="rg-button followed">已关注 </a>
                                        <% } %>
                            </div>
                            <% } %>
                                <div id="message-box" class="zoom-anim-dialog mfp-hide">
                                    <div class="message-head">发私信给
                                        <%= datas[0].userNick %>：</div>
                                    <textarea class="rg-textarea textbox" placeholder="说点悄悄话~~"></textarea>
                                    <div class="action">
                                        <a href="javascript:void(0);" class="rg-button action-send">发送</a>
                                    </div>
                                </div>
                    </div>
                </div>
            </section>
            <section class="home-section one-section container">
                <div class="col-group">
                    <div class="col-group">
                        <% if(user.userId!=datas[0].userId){}else{ %>
                            <% if(datas[0].userEmail==""){ %>
                                <div class="col-12">
                                    <div class="ui warning message">
                                        <i class="close icon"></i>
                                        <p class="header">您没有绑定邮箱，绑定邮箱并设置密码后可以使用邮箱登录... <a href="/users/toSelect/<%= datas[0].userId %>/set/email">点我前往绑定邮箱</a></p>
                                    </div>
                                </div>
                                <% }else{ %>
                                    <div class="col-12">
                                        <div class="ui warning message">
                                            <i class="close icon"></i>
                                            <p class="header">您已绑定邮箱：
                                                <%= datas[0].userEmail %><a href="/users/toSelect/<%= datas[0].userId %>/set/email">点我前往修改绑定邮箱</a>
                                            </p>
                                        </div>
                                    </div>
                                    <% } }%>
                                        <script>
                                            $(function() {
                                                $(".followed").mouseover(function() {
                                                    $(this).html("取消关注");
                                                });
                                                $(".followed").mouseout(function() {
                                                    $(this).html("已关注");
                                                });
                                            });
                                        </script>