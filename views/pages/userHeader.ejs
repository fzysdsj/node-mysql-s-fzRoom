    <div id="signinModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="/users/signin">
                    <div class="modal-header">登录</div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="signinName">用户名</label>
                            <input id="signinName" name="username" type="text" placeholder="请输入6~12位用户名" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="signinPassword">密码</label>
                            <input id="signinPassword" name="password" type="password" placeholder="请输入6~12位密码" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-default">关闭</button>
                        <button type="submit" class="btn btn-success">提交</button>
                    </div>
                </form>
                <script type="text/javascript">
                    function getRegist() {
                        location.href = "/users/signup";
                    }
                </script>
            </div>
        </div>
